<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt276.restaurantinspector">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_search"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_search"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantInspector">
        <activity android:name=".ui.ViolationListActivity"
            android:parentActivityName=".ui.InspectionListActivity"
            android:label="@string/inspection"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize" android:screenOrientation="portrait"/>
        <activity android:name=".ui.InspectionListActivity"
            android:parentActivityName=".ui.RestaurantListActivity"
            android:label="@string/restaurant"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize" android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.RestaurantListActivity"
            android:label="@string/restaurants"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>