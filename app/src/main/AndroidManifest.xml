<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt276.restaurantinspector">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_search"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_search"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantInspector">
        <activity android:name=".ui.RestaurantInfo" />
        <activity android:name=".ui.MainActivity"
            android:label="@string/restaurants">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>